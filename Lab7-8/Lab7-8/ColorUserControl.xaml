<UserControl x:Class="Lab7_8.ColorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab7_8"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <Border Name="Border" CornerRadius="40" Width="200" Height="100" Background="Azure">
            <TextBox Width="180" Name="txt" TextChanged="Txt_TextChanged" Background="Azure" TextAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="Azure" Template="{DynamicResource MyTextBoxTemplateWithoutBorder}"></TextBox>
        </Border>
    </Grid>
</UserControl>
